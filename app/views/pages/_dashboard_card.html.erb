<div class="main-dashboard-card d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="upper"> <img src="https://i.imgur.com/Qtrsrk5.jpg" class="img-fluid"> </div>
        <div class="user text-center">
            <div class="profile">
              <% if current_user.photo.attached? %>
                 <% url = cl_image_path current_user.photo.key, height: 300, crop: :fill %>
              <% else %>
                <% url = 'https://hszteam.de/wp-content/uploads/2021/01/avatar-placeholder.gif' %>
              <% end %>
              <%= image_tag "#{url}", class: "rounded-circle" %>
        </div>
        <div class="mt-5 text-center">
            <h4 class="mb-0"><%= current_user.user_name %></h4> <span class="text-muted d-block mb-2"><%= current_user.location %></span> <button class="btn btn-primary btn-sm follow">Follow</button>
            <div class="d-flex justify-content-between align-items-center mt-4 px-4">
                <div class="stats">
                    <h6 class="mb-0">Books</h6> <span><%= current_user.books.count %></span>
                </div>
                <div class="stats">
                    <h6 class="mb-0">Outgoing <br> requests</h6> <span><%= current_user.bookings.count %></span>
                </div>
                <div class="stats">
                    <h6 class="mb-0">Incoming <br> requests</h6> <span><%= @total_bookings %></span>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
